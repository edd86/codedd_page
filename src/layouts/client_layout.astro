---
const { cliente } = Astro.props;
const sourceLogo = `/${cliente._id}/logo.webp`;
const portadaLogo = `/${cliente._id}/portada.webp`;
---

<!doctype html>
<html lang="es">
  <>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{cliente.name}</title>
    <link rel="icon" type="image/png" href=`/${cliente._id}/logo.webp` />
  </>
  <body>
    <div class="profile-header">
      <div class="cover-profile">
        <img src={portadaLogo} alt={cliente.name} />
      </div>
    </div>
    <div class="profile-details">
      <div class="profile-image">
        <img src={sourceLogo} alt={cliente.name} />
      </div>
      <div class="profile-info">
        <h1>{cliente.name}</h1>
        <p class="rubro">{cliente.rubro}</p>
        <p class="slogan">{cliente.slogan}</p>
      </div>
    </div>
    <slot />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap");

      body {
        background: linear-gradient(
          0deg,
          rgb(0, 6, 15) 30%,
          rgb(124, 124, 124) 80%
        );
        color: white;
        font-family: "Ubuntu", sans-serif;
        justify-content: center;
        align-items: center;
        margin: 0;
      }

      p {
        margin: 0;
      }

      .profile-header {
        width: 100%;
        position: relative;
      }

      .cover-profile img {
        width: 100%;
        height: 20vh;
        /*overflow: fit;*/
        object-fit: cover;
      }

      .profile-details {
        display: flex;
        align-items: center;
        padding: 0px 10px 5px 10px;
        position: relative;
        flex-wrap: wrap;
      }

      .profile-image {
        position: absolute;
        top: -65px;
        left: 10px;
        border-radius: 50%;
        overflow: hidden;
      }

      .profile-image img {
        width: 130px;
        height: 130px;
        border-radius: 50%;
      }

      .profile-info {
        margin-left: 140px;
        flex: 1;
      }

      .profile-info h1 {
        font-size: 1.8rem;
        padding-top: 0px;
        margin: 0 0 5px 0;
        font-weight: 500;
      }

      .rubro {
        font-size: 0.9rem;
      }

      .slogan {
        font-size: 0.7rem;
      }

      @media screen and (min-width: 900px) {
        .cover-profile img {
          height: 50vh;
          object-fit: fill;
        }
      }
    </style>
  </body>
</html>
