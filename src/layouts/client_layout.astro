---
const { cliente } = Astro.props;
const sourceLogo = `/${cliente._id}/logo.webp`;
const portadaLogo = `/${cliente._id}/portada.webp`;
---

<!doctype html>
<html lang="es">
  <>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{cliente.name}</title>
    <link rel="icon" type="image/png" href=`/${cliente._id}/logo.webp` />
  </>
  <body>
    <div class="profile-details">
      <div class="profile-image">
        <img src={sourceLogo} alt={cliente.name} />
      </div>
      <div class="profile-info">
        <h1>{cliente.name}</h1>
        <p class="rubro">{cliente.rubro}</p>
      </div>
    </div>
    <slot />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap");

      body {
        background: linear-gradient(
          0deg,
          rgb(0, 6, 15) 30%,
          rgb(124, 124, 124) 80%
        );
        margin: 0;
        padding: 0;
        font-family: "Ubuntu", sans-serif;
        color: white;
        display: block;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      p {
        margin: 0;
      }

      .profile-details {
        /*background-color: #333;*/
        width: 300px;
        padding: 20px;
        border-radius: 10px;
        /*box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);*/
      }

      .profile-image {
        width: 160px;
        height: 160px;
        margin: auto;
        border-radius: 50%;
        align-items: center;
        overflow: hidden;
      }

      .profile-image img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
      }

      .profile-info h1 {
        text-align: center;
        font-size: 1.8rem;
        padding-top: 0px;
        margin: 0 0 5px 0;
        font-weight: 500;
      }

      .rubro {
        text-align: center;
        font-size: 0.9rem;
      }
    </style>
  </body>
</html>
